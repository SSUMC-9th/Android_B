<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/locker_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관함"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/locker_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="#3f3fff"
        android:textSize="15sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/locker_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/locker_title_tv"
        />

    <com.google.android.material.tabs.TabLayout
        android:contentDescription="tab"
        android:id="@+id/locker_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:tabIndicatorFullWidth="false"
        app:tabSelectedTextColor="#3f3fff"
        app:tabIndicatorColor="#3f3fff"
        app:tabRippleColor="#00ff0000"
        app:layout_constraintEnd_toEndOf="@id/locker_login_tv"
        app:layout_constraintStart_toStartOf="@id/locker_title_tv"
        app:layout_constraintTop_toBottomOf="@id/locker_title_tv"/>

    <ImageView
        android:id="@+id/locker_select_all_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/btn_playlist_select_off"
        app:layout_constraintTop_toBottomOf="@id/locker_content_tb"
        app:layout_constraintStart_toStartOf="@id/locker_content_tb"/>

    <TextView
        android:id="@+id/locker_select_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체선택"
        android:textColor="#424242"
        app:layout_constraintStart_toEndOf="@id/locker_select_all_iv"
        app:layout_constraintTop_toTopOf="@id/locker_select_all_iv"
        app:layout_constraintBottom_toBottomOf="@id/locker_select_all_iv"/>

    <ImageView
        android:id="@+id/locker_play_all_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_browse_arrow_right"
        app:layout_constraintTop_toTopOf="@id/locker_select_all_iv"
        app:layout_constraintBottom_toBottomOf="@id/locker_select_all_iv"
        app:layout_constraintStart_toEndOf="@id/locker_select_all_tv"/>

    <TextView
        android:id="@+id/locker_play_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체듣기"
        android:textColor="#424242"
        app:layout_constraintStart_toEndOf="@id/locker_play_all_iv"
        app:layout_constraintTop_toTopOf="@id/locker_select_all_iv"
        app:layout_constraintBottom_toBottomOf="@id/locker_select_all_iv"/>


    <TextView
        android:id="@+id/locker_edit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:textColor="#424242"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/locker_select_all_iv"
        app:layout_constraintBottom_toBottomOf="@id/locker_select_all_iv"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/locker_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/locker_content_tb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>